		</afp:PermitValueRule>
	</afp:AttributeRule>

	<afp:AttributeRule attributeID="organizationName">
		<afp:PermitValueRule xsi:type="basic:ANY" />
	</afp:AttributeRule>

	<afp:AttributeRule attributeID="norEduOrgAcronym">
